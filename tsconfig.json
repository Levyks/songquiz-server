{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true ,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules/*",
    "dist/*"
  ]
}